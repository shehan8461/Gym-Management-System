<Window x:Class="GymManagementSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Nano Sonic Gym Management - Login" 
        Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0a0a0a">
    
    <Window.Resources>
        <!-- Custom styles -->
        <Style x:Key="ModernTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#6366f1"/>
            <Setter Property="BorderBrush" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#6366f1"/>
            <Setter Property="BorderBrush" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Loading Animation Storyboard -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                             Storyboard.TargetProperty="Angle"
                             From="0" To="360" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Branding/Hero Section -->
        <Grid Grid.Column="0">
            <!-- Background gradient overlay -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0a0a0a" Offset="0"/>
                    <GradientStop Color="#1a1a2e" Offset="0.5"/>
                    <GradientStop Color="#16213e" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- Animated circles decoration -->
            <Canvas>
                <Ellipse Width="300" Height="300" Canvas.Left="-100" Canvas.Top="-100" Opacity="0.08">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#6366f1" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="Circle1Rotation" Angle="0" CenterX="150" CenterY="150"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="Circle1Rotation"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:20"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <Ellipse Width="400" Height="400" Canvas.Right="-150" Canvas.Bottom="-150" Opacity="0.06">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#a855f7" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="Circle2Rotation" Angle="0" CenterX="200" CenterY="200"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="Circle2Rotation"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="360" To="0" Duration="0:0:25"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <!-- Floating particles -->
                <Ellipse Width="6" Height="6" Canvas.Left="50" Canvas.Top="100" Fill="#6366f1" Opacity="0.6">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle1Y" Y="0"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="Particle1Y"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="-200" Duration="0:0:3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <Ellipse Width="4" Height="4" Canvas.Left="200" Canvas.Top="300" Fill="#a855f7" Opacity="0.4">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Particle2Y" Y="0"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="Particle2Y"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="-150" Duration="0:0:4"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Canvas>
            
            <StackPanel VerticalAlignment="Center" Margin="60,0">
                <!-- Logo Image with pulse effect -->
                <Border CornerRadius="20" Margin="0,0,0,20">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#6366f1" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#6366f1" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <Image Source="/Resources/nano-sonic-logo.png" 
                           Width="150" Height="150" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Stretch="Uniform">
                        <Image.Effect>
                            <DropShadowEffect Color="#6366f1" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                        </Image.Effect>
                    </Image>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.8" To="1" Duration="0:0:2"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                </Border>
                
                <!-- App Title -->
                <TextBlock Text="NANO SONIC" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#6366f1" BlurRadius="15" ShadowDepth="2" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="GYM MANAGEMENT" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#a855f7" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <!-- Tagline -->
                <Border Background="#1a1a2e" 
                        CornerRadius="20" 
                        Padding="30,20" 
                        Margin="0,50,0,0"
                        BorderBrush="#6366f1"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#6366f1" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                     Width="24" Height="24" 
                                                     Foreground="#6366f1" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Member Management" 
                                       FontSize="16" 
                                       Foreground="#E0E0E0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                     Width="24" Height="24" 
                                                     Foreground="#6366f1" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Attendance Tracking" 
                                       FontSize="16" 
                                       Foreground="#E0E0E0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                     Width="24" Height="24" 
                                                     Foreground="#6366f1" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Payment Processing" 
                                       FontSize="16" 
                                       Foreground="#E0E0E0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                     Width="24" Height="24" 
                                                     Foreground="#6366f1" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Biometric Integration" 
                                       FontSize="16" 
                                       Foreground="#E0E0E0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Footer text -->
                <TextBlock Text="Transform your gym operations with cutting-edge technology" 
                           FontSize="14" 
                           Foreground="#808080" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,40,0,0"
                           MaxWidth="400"/>
            </StackPanel>
        </Grid>

        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Background="#1a1a2e">
            <materialDesign:Card Margin="30" 
                                 Padding="30"
                                 VerticalAlignment="Center"
                                 UniformCornerRadius="15"
                                 Background="#0f0f23">
                <materialDesign:Card.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
                </materialDesign:Card.Effect>
                
                <StackPanel>
                    <!-- Welcome Text with animation -->
                    <TextBlock Text="Welcome Back!" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"
                               Opacity="0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.8">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         From="20" To="0" Duration="0:0:0.8">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    
                    <TextBlock Text="Sign in to continue" 
                               FontSize="14" 
                               Foreground="#B0B0B0"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,40"
                               Opacity="0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard BeginTime="0:0:0.3">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         From="15" To="0" Duration="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="15"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <!-- Username Field -->
                    <Border Background="#1a1a1a" 
                            CornerRadius="10" 
                            Padding="8"
                            Margin="0,0,0,20"
                            Opacity="0">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard BeginTime="0:0:0.6">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         From="-30" To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <Border.RenderTransform>
                            <TranslateTransform X="-30"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="USERNAME" 
                                       FontSize="11" 
                                       Foreground="#808080"
                                       Margin="12,8,0,0"
                                       FontWeight="SemiBold"/>
                            <TextBox x:Name="txtUsername" 
                                     Style="{StaticResource ModernTextBox}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="0,0,0,8"/>
                        </StackPanel>
                    </Border>

                    <!-- Password Field -->
                    <Border Background="#1a1a1a" 
                            CornerRadius="10" 
                            Padding="8"
                            Margin="0,0,0,28"
                            Opacity="0">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard BeginTime="0:0:0.9">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                         From="-30" To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <Border.RenderTransform>
                            <TranslateTransform X="-30"/>
                        </Border.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="PASSWORD" 
                                       FontSize="11" 
                                       Foreground="#808080"
                                       Margin="12,8,0,0"
                                       FontWeight="SemiBold"/>
                            <PasswordBox x:Name="txtPassword" 
                                         Style="{StaticResource ModernPasswordBox}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Margin="0,0,0,8"/>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border x:Name="errorBorder"
                            Background="#FF6B6B" 
                            CornerRadius="8" 
                            Padding="12,10"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                     Width="20" Height="20" 
                                                     Foreground="White" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtError" 
                                       Text="" 
                                       Foreground="White" 
                                       FontSize="13" 
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Login Button with Loading -->
                    <Grid x:Name="loginButtonContainer" Margin="0,0,0,25">
                        <Button x:Name="btnLogin" 
                                Content="SIGN IN" 
                                Height="50"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Background="#6366f1"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnLogin_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10"/>
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#818cf8"/>
                                            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Effect>
                                <DropShadowEffect Color="#6366f1" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Button.Effect>
                        </Button>
                        
                        <!-- Loading State -->
                        <Grid x:Name="loadingState" Visibility="Collapsed">
                            <Button Height="50"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Background="#6366f1"
                                    BorderThickness="0"
                                    IsEnabled="False"
                                    materialDesign:ButtonAssist.CornerRadius="10">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Loading" 
                                                             Width="20" Height="20" 
                                                             Foreground="White" 
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,10,0"
                                                             RenderTransformOrigin="0.5,0.5">
                                        <materialDesign:PackIcon.RenderTransform>
                                            <RotateTransform x:Name="LoadingSpinner" Angle="0"/>
                                        </materialDesign:PackIcon.RenderTransform>
                                        <materialDesign:PackIcon.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard Storyboard="{StaticResource LoadingAnimation}"/>
                                            </EventTrigger>
                                        </materialDesign:PackIcon.Triggers>
                                    </materialDesign:PackIcon>
                                    <TextBlock Text="SIGNING IN..." VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>

                    <!-- Default Credentials Info -->
                    <Border Background="#1a1a2e" 
                            CornerRadius="8" 
                            Padding="15,12"
                            BorderBrush="#424242"
                            BorderThickness="1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <materialDesign:PackIcon Kind="InformationOutline" 
                                                         Width="18" Height="18" 
                                                         Foreground="#6366f1" 
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="Default Credentials" 
                                           FontSize="12" 
                                           Foreground="#B0B0B0"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center">
                                <Run Text="Username: " Foreground="#808080" FontSize="11"/>
                                <Run Text="admin" Foreground="#6366f1" FontWeight="Bold" FontSize="11"/>
                            </TextBlock>
                            <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0">
                                <Run Text="Password: " Foreground="#808080" FontSize="11"/>
                                <Run Text="admin123" Foreground="#6366f1" FontWeight="Bold" FontSize="11"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
