<Window x:Class="GymManagementSystem.Views.Dialogs.AddEditDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add/Edit Device" 
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <StackPanel Margin="30">
        <TextBlock x:Name="txtTitle" Text="Add Biometric Device" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

        <TextBox x:Name="txtDeviceName" 
                 materialDesign:HintAssist.Hint="Device Name*"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,15"/>

        <TextBox x:Name="txtIPAddress" 
                 materialDesign:HintAssist.Hint="IP Address*"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,15"/>

        <TextBox x:Name="txtPort" 
                 materialDesign:HintAssist.Hint="Port*"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Text="8000"
                 Margin="0,0,0,15"/>

        <TextBox x:Name="txtUsername" 
                 materialDesign:HintAssist.Hint="Username*"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Text="admin"
                 Margin="0,0,0,15"/>

        <PasswordBox x:Name="txtPassword" 
                     materialDesign:HintAssist.Hint="Password*"
                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                     Margin="0,0,0,15"/>

        <ComboBox x:Name="cmbDeviceType" 
                  materialDesign:HintAssist.Hint="Device Type"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  Margin="0,0,0,15">
            <ComboBoxItem Content="Hikvision" IsSelected="True"/>
            <ComboBoxItem Content="ZKTeco"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <CheckBox x:Name="chkIsActive" Content="Active Device" 
                  IsChecked="True" Margin="0,0,0,30"/>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="CANCEL" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100" Height="40" Margin="0,0,10,0"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnSave" Content="SAVE" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100" Height="40"
                    Click="btnSave_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
