<Window x:Class="GymManagementSystem.Views.Dialogs.MarkAttendanceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Mark Attendance" 
        Height="620" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
        <TextBlock x:Name="txtTitle" Text="Mark Attendance" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Member Selection -->
        <ComboBox x:Name="cmbMember" 
                  materialDesign:HintAssist.Hint="Select Member*"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  DisplayMemberPath="DisplayText"
                  SelectedValuePath="MemberId"
                  IsEditable="True"
                  IsTextSearchEnabled="True"
                  SelectionChanged="cmbMember_SelectionChanged"
                  Margin="0,0,0,15"/>

        <!-- Check-In Section -->
        <Border x:Name="checkInSection" BorderBrush="#00BFA5" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Check-In Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                
                <DatePicker x:Name="dpCheckInDate" 
                            materialDesign:HintAssist.Hint="Check-In Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            SelectedDateChanged="dpCheckInDate_SelectedDateChanged"
                            Margin="0,0,0,15"/>

                <materialDesign:TimePicker x:Name="tpCheckInTime" 
                                           materialDesign:HintAssist.Hint="Check-In Time"
                                           Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                                           SelectedTimeChanged="tpCheckInTime_SelectedTimeChanged"
                                           Margin="0,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Check-Out Section -->
        <Border x:Name="checkOutSection" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Check-Out Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                
                <DatePicker x:Name="dpCheckOutDate" 
                            materialDesign:HintAssist.Hint="Check-Out Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            SelectedDateChanged="dpCheckOutDate_SelectedDateChanged"
                            Margin="0,0,0,15"/>

                <materialDesign:TimePicker x:Name="tpCheckOutTime" 
                                           materialDesign:HintAssist.Hint="Check-Out Time"
                                           Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                                           Margin="0,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Existing Attendance Info -->
        <materialDesign:Card x:Name="existingAttendanceCard" Visibility="Collapsed" Padding="15" Margin="0,0,0,15" Background="#E3F2FD">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <materialDesign:PackIcon Kind="InformationOutline" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Checked In Today" FontWeight="SemiBold" Foreground="#1976D2"/>
                </StackPanel>
                <TextBlock x:Name="txtExistingCheckIn" Text="" Foreground="#424242" FontSize="12"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Remarks -->
        <TextBox x:Name="txtRemarks" 
                 materialDesign:HintAssist.Hint="Remarks (Optional)"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 MinLines="3"
                 MaxLines="3"
                 TextWrapping="Wrap"
                 Margin="0,0,0,20"/>

        <TextBlock x:Name="txtWarning" 
                   Text="" 
                   Foreground="Orange" 
                   FontSize="12" 
                   Margin="0,0,0,15"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="CANCEL" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100" Height="40" Margin="0,0,10,0"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnSave" Content="MARK ATTENDANCE" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="170" Height="40"
                    Click="btnSave_Click"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Window>
