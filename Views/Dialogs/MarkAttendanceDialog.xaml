<Window x:Class="GymManagementSystem.Views.Dialogs.MarkAttendanceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Mark Attendance" 
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
        <TextBlock Text="Mark Attendance" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Member Selection -->
        <ComboBox x:Name="cmbMember" 
                  materialDesign:HintAssist.Hint="Select Member*"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  DisplayMemberPath="DisplayText"
                  SelectedValuePath="MemberId"
                  IsEditable="True"
                  IsTextSearchEnabled="True"
                  Margin="0,0,0,15"/>

        <!-- Date and Time -->
        <DatePicker x:Name="dpAttendanceDate" 
                    materialDesign:HintAssist.Hint="Attendance Date"
                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                    Margin="0,0,0,15"/>

        <materialDesign:TimePicker x:Name="tpCheckInTime" 
                                   materialDesign:HintAssist.Hint="Check-In Time"
                                   Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                                   Margin="0,0,0,15"/>

        <!-- Remarks -->
        <TextBox x:Name="txtRemarks" 
                 materialDesign:HintAssist.Hint="Remarks (Optional)"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 MinLines="3"
                 MaxLines="3"
                 TextWrapping="Wrap"
                 Margin="0,0,0,20"/>

        <TextBlock x:Name="txtWarning" 
                   Text="" 
                   Foreground="Orange" 
                   FontSize="12" 
                   Margin="0,0,0,15"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="CANCEL" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100" Height="40" Margin="0,0,10,0"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnSave" Content="MARK ATTENDANCE" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="170" Height="40"
                    Click="btnSave_Click"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Window>
