<Window x:Class="GymManagementSystem.Views.Dialogs.MemberActionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Member Actions" 
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="txtMemberName" Text="Member Actions" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="txtMemberInfo" Text="" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="btnEdit" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#2196F3"
                    Foreground="White"
                    Height="50"
                    Margin="0,0,0,15"
                    Click="btnEdit_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Pencil" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Edit Member" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnPackage" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#9C27B0"
                    Foreground="White"
                    Height="50"
                    Margin="0,0,0,15"
                    Click="btnPackage_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Package" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Assign Package" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnPayment" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#4CAF50"
                    Foreground="White"
                    Height="50"
                    Margin="0,0,0,15"
                    Click="btnPayment_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CurrencyUsd" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Add Payment" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnHistory" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    BorderBrush="#00BFA5"
                    Foreground="#00BFA5"
                    Height="50"
                    Margin="0,0,0,15"
                    Click="btnHistory_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="History" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="View History" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnBiometric" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    BorderBrush="#E91E63"
                    Foreground="#E91E63"
                    Height="50"
                    Margin="0,0,0,15"
                    Click="btnBiometric_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Fingerprint" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Biometric Enrollment" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnDelete" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#F44336"
                    Foreground="White"
                    Height="50"
                    Click="btnDelete_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Delete" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Delete Member" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
