<Page x:Class="GymManagementSystem.Views.Pages.PackagesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Packages">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Membership Packages" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="btnAddPackage" 
                    Content="ADD PACKAGE" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="20,0,0,0"
                    Height="40"
                    Click="btnAddPackage_Click"/>
        </StackPanel>

        <!-- Packages DataGrid -->
        <materialDesign:Card Grid.Row="1">
            <DataGrid x:Name="dgPackages" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding PackageId}" Width="60"/>
                    <DataGridTextColumn Header="Package Name" Binding="{Binding PackageName}" Width="*"/>
                    <DataGridTextColumn Header="Duration (Months)" Binding="{Binding DurationMonths}" Width="150"/>
                    <DataGridTextColumn Header="Price (LKR)" Binding="{Binding Price, StringFormat=N2}" Width="150"/>
                    <DataGridTextColumn Header="Members Count" Binding="{Binding MemberCount}" Width="130">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#00BFA5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                    <DataGridTemplateColumn Header="Actions" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding PackageId}"
                                            Click="btnEdit_Click"
                                            Margin="0,0,5,0"/>
                                    <Button Content="View Members" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding PackageId}"
                                            Click="btnViewMembers_Click"
                                            Foreground="#2196F3"
                                            Margin="5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</Page>
