<Page x:Class="GymManagementSystem.Views.Pages.MembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Members">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Members Management" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="btnAddMember" 
                    Content="ADD NEW MEMBER" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="20,0,0,0"
                    Height="40"
                    Click="btnAddMember_Click"/>
        </StackPanel>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtSearch" 
                     Grid.Column="0"
                     materialDesign:HintAssist.Hint="Search by name, phone, or NIC"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     TextChanged="txtSearch_TextChanged"/>

            <Button x:Name="btnRefresh" 
                    Grid.Column="1"
                    Content="REFRESH" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="10,0,0,0"
                    Height="40"
                    Click="btnRefresh_Click"/>
        </Grid>

        <!-- Members DataGrid -->
        <materialDesign:Card Grid.Row="2">
            <DataGrid x:Name="dgMembers" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      MouseDoubleClick="dgMembers_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding MemberId}" Width="60"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                    <DataGridTextColumn Header="Assigned Package" Binding="{Binding AssignedPackageName}" Width="150"/>
                    <DataGridTextColumn Header="Payment Status" Binding="{Binding PaymentStatus}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="Paid">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Due Soon">
                                        <Setter Property="Foreground" Value="#FF9800"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="Overdue">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="Text" Value="No Package">
                                        <Setter Property="Foreground" Value="#9E9E9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Next Due" Binding="{Binding NextDueDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
                    <DataGridTemplateColumn Header="Actions" Width="460">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Edit" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding MemberId}"
                                            Click="btnEdit_Click"
                                            MinWidth="58"
                                            Padding="8,4"
                                            Margin="0,0,2,0"/>
                                    <Button Content="Package" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding MemberId}"
                                            Click="btnAssignPackage_Click"
                                            Foreground="#9C27B0"
                                            MinWidth="72"
                                            Padding="8,4"
                                            Margin="2,0,2,0"/>
                                    <Button Content="Payment" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding MemberId}"
                                            Click="btnPayment_Click"
                                            Foreground="Green"
                                            MinWidth="72"
                                            Padding="8,4"
                                            Margin="2,0,2,0"/>
                                    <Button Content="History" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding MemberId}"
                                            Click="btnHistory_Click"
                                            Foreground="#2196F3"
                                            MinWidth="68"
                                            Padding="8,4"
                                            Margin="2,0,2,0"/>
                                    <Button Content="Biometric" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Tag="{Binding MemberId}"
                                            Click="btnBiometric_Click"
                                            Foreground="#E91E63"
                                            MinWidth="78"
                                            Padding="8,4"
                                            Margin="2,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</Page>
