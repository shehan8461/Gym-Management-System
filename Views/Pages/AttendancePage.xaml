<Page x:Class="GymManagementSystem.Views.Pages.AttendancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:GymManagementSystem.Converters"
      Title="Attendance">
    
    <Page.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:TypeColorConverter x:Key="TypeColorConverter"/>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Attendance" FontSize="28" FontWeight="Bold" Foreground="#202124" Margin="0,0,0,24"/>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Present Today -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,16,0" Padding="20" UniformCornerRadius="12" Background="White" materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Present Today" FontSize="14" Foreground="#5f6368" FontWeight="Medium"/>
                        <materialDesign:PackIcon Grid.Column="1" Kind="AccountCheck" Foreground="#43a047" Width="24" Height="24"/>
                    </Grid>
                    <TextBlock x:Name="txtPresentCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#202124" Margin="0,8,0,0"/>
                    <TextBlock Text="Checked In" FontSize="12" Foreground="#43a047" Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Currently Active -->
            <materialDesign:Card Grid.Column="1" Margin="0,0,16,0" Padding="20" UniformCornerRadius="12" Background="White" materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Currently In Gym" FontSize="14" Foreground="#5f6368" FontWeight="Medium"/>
                        <materialDesign:PackIcon Grid.Column="1" Kind="Dumbbell" Foreground="#1e88e5" Width="24" Height="24"/>
                    </Grid>
                    <TextBlock x:Name="txtActiveCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#202124" Margin="0,8,0,0"/>
                    <TextBlock Text="Active Workout" FontSize="12" Foreground="#1e88e5" Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

           <!-- Mark Attendance Button -->
            <Button x:Name="btnMarkAttendance" 
                    Grid.Column="2"
                    Height="Auto"
                    materialDesign:ButtonAssist.CornerRadius="12"
                    Background="#202124"
                    BorderBrush="{x:Null}"
                    Foreground="White"
                    Click="btnMarkAttendance_Click"
                    materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <materialDesign:PackIcon Kind="Fingerprint" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="MARK ATTENDANCE" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="Scan or Manual Entry" FontSize="12" Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Filter Bar -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,24" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24" VerticalAlignment="Center" Margin="16" Foreground="#9e9e9e"/>
                
                <TextBox x:Name="txtSearch" 
                         Grid.Column="1"
                         materialDesign:HintAssist.Hint="Search members..."
                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                         BorderThickness="0"
                         FontSize="16"
                         VerticalAlignment="Center"
                         TextChanged="txtSearch_TextChanged"/>

                <DatePicker x:Name="dpFilterDate" 
                            Grid.Column="2"
                            Width="140"
                            materialDesign:HintAssist.Hint="Pick Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="16,8"
                            SelectedDateChanged="dpFilterDate_SelectedDateChanged"/>
                            
                 <Button x:Name="btnToday" 
                        Grid.Column="3"
                        Content="Today" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,16,0"
                        Click="btnToday_Click"/>

                <Button x:Name="btnRefresh" 
                        Grid.Column="4"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh"
                        Margin="0,0,8,0"
                        Click="btnRefresh_Click">
                    <materialDesign:PackIcon Kind="Refresh" Foreground="#5f6368"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Attendance DataGrid -->
        <materialDesign:Card Grid.Row="3" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2" Padding="0">
            <DataGrid x:Name="dgAttendance" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#eeeeee"
                      Background="White"
                      RowBackground="White"
                      BorderThickness="0"
                      VerticalScrollBarVisibility="Auto">
                <DataGrid.Resources>
                     <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="#5f6368"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Padding" Value="24,16"/>
                        <Setter Property="Height" Value="56"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#eeeeee"/>
                    </Style>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="24,16"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#202124"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding AttendanceId}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#9e9e9e"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="MEMBER" Binding="{Binding MemberName}" Width="*" MinWidth="180" FontWeight="SemiBold"/>
                    
                    <DataGridTemplateColumn Header="DATE" Width="140">
                         <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Calendar" Foreground="#757575" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding CheckInDate, StringFormat=dd MMM yyyy}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="CHECK-IN" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" Background="#e8f5e9" Padding="8,4" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding CheckInTimeDisplay}" Foreground="#2e7d32" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="CHECK-OUT" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" Background="#e3f2fd" Padding="8,4" HorizontalAlignment="Left" Visibility="{Binding CheckOutTimeDisplay, Converter={StaticResource StringToVisibilityConverter}}">
                                    <TextBlock Text="{Binding CheckOutTimeDisplay}" Foreground="#1565c0" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="TYPE" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Fingerprint" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{Binding AttendanceType, Converter={StaticResource TypeColorConverter}}"/>
                                    <TextBlock Text="{Binding AttendanceType}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="REMARKS" Binding="{Binding Remarks}" Width="*">
                         <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#757575"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</Page>
